{% render 'partials/head.liquid' %}
<main class="main-class">
  <article class="photo-cont">
  {% for exercise in specificExercise %}
  <!--cloes button send back to rouwtaak-->
    <a href="/rouwtaak/{{ exercise.task.id }}" class="close-button">        
        <svg width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg">
        <title>close</title>
        <path d="M13.5561 1L1 13.5561" stroke="#111111" stroke-width="1.25" stroke-linecap="round"/>
        <path d="M13.5561 1L1 13.5561" stroke="#111111" stroke-width="1.25" stroke-linecap="round"/>
        <path d="M13.5561 1L1 13.5561" stroke="#111111" stroke-width="1.25" stroke-linecap="round"/>
        <path d="M1.44382 1.44385L13.9999 14" stroke="#111111" stroke-width="1.25" stroke-linecap="round"/>
        <path d="M1.44382 1.44385L13.9999 14" stroke="#111111" stroke-width="1.25" stroke-linecap="round"/>
        <path d="M1.44382 1.44385L13.9999 14" stroke="#111111" stroke-width="1.25" stroke-linecap="round"/>
        </svg>
    </a>  

    <img src="https://fdnd-agency.directus.app/assets/{{ exercise.image.id }}" alt="{{ exercise.title }} foto" class="view-image">
  
  {% endfor %}
  </article>
  
  <article class="exercise-card">
      {% for exercise in specificExercise %}
        <article>
          <ul class="inline">
              <li class="inline"><p>{{ exercise.type }}</p>|</li>
              <li class="inline">
                  <img src="/icons/time.svg" alt="time icon">
                  <p>{{ exercise.duration }} min</p>
              </li>
              <li class="inline">
                  <img src="/icons/community-drops-color.svg" alt="community-drops icon">
                  <p>{{  countMessages }} community drops</p> 
              </li>
          </ul>
          <progress class="custom-progress" value="10" max="100"></progress>
        </article>
 <!--title and sescription for the exercies-->
        <section >
            <h1>{{ exercise.title }}</h1>
            <p>{{ exercise.description }}</p>
        </section>
      {% endfor %}

      {% for messageId in specificExercise %}
        <button id="PlaatsBerichtBtn" class=" them-{{ messageId.task.id }} try"><span>Plaats bericht</span></button>
<!--navigation layer-->
        <section id="overlay">
          <section id="overlayContent">
            <h2>Let op!</h2>
            <p>Wil je deelnemen aan die community drop?</p>
              <article class="button-row ">
              <button class="closeFormButton" id="closeFormButton">Sluiten</button>
              <a class=" them-{{ messageId.task.id }} closeFormButton btn-standard" href="/community-drops/{{ messageId.id }}">Start</a>
              </article>
          </section>
        </section>
      {% endfor %}
  </article>
 

    
</main>






