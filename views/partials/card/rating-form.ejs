<form
    class="rating-form"
    method="POST"
    action="/rate/<%= house.id %>"
    data-current-rating="<%- Math.floor(Math.random() * 6) %>"
    data-id="<%= house.id %>"
>
    <%- include('../loader') %> <%- include('../success') %>

    <input type="radio" name="rating" value="1" 
        <% if (rating == 1) { %>
            checked
        <% } %>
    />
    <input type="radio" name="rating" value="2" 
        <% if (rating == 2) { %>
            checked
        <% } %>
    />
    <input type="radio" name="rating" value="3" 
        <% if (rating == 3) { %>
            checked
        <% } %>
    />
    <input type="radio" name="rating" value="4" 
        <% if (rating == 4) { %>
            checked
        <% } %>
    />
    <input type="radio" name="rating" value="5" 
        <% if (rating == 5) { %>
            checked
        <% } %>
    />

    <button type="submit">Submit</button>
</form>
